CREATE FUNCTION CALCULATOR ()
RETURNS @SQL_CALCULATOR TABLE (CALCULATE INT, OPERATORS VARCHAR (MAX))
BEGIN 
DECLARE @MULTIPLY AS VARCHAR(MAX)
DECLARE @ADD  AS VARCHAR(MAX)
DECLARE @MINUS  AS VARCHAR(MAX)
DECLARE @DIVISION  AS VARCHAR(MAX)
DECLARE @MODULE  AS VARCHAR(MAX)
DECLARE @NUM1  INT
DECLARE @NUM2 INT
DECLARE @NUMBER1 VARCHAR(MAX)
DECLARE @NUMBER2 VARCHAR(MAX)

SET @NUM1 = 30 --- this is the first number
SET @NUM2 = 20  ---- this is the second number 


SET @MULTIPLY =  ('MULTIPLY')
SET @ADD =  ('ADD')
SET @MINUS =('MINUS')
SET @DIVISION =('DIVISION')
SET @MODULE = ('MODULE') 
SET @NUMBER1 = ('NUM1')
SET @NUMBER2 = ('NUM2')

INSERT INTO @SQL_CALCULATOR(CALCULATE , OPERATORS) VALUES  (@NUM1, (@NUMBER1)) 
INSERT INTO @SQL_CALCULATOR(CALCULATE , OPERATORS) VALUES  (@NUM2, (@NUMBER2)) 
INSERT INTO @SQL_CALCULATOR(CALCULATE, OPERATORS) VALUES (@NUM1 * @NUM2, (@MULTIPLY))
INSERT INTO @SQL_CALCULATOR(CALCULATE, OPERATORS) VALUES (@NUM1 + @NUM2, (@ADD)) 
INSERT INTO @SQL_CALCULATOR(CALCULATE, OPERATORS) VALUES  (@NUM1 - @NUM2, (@MINUS)) 
INSERT INTO @SQL_CALCULATOR(CALCULATE, OPERATORS) VALUES  (@NUM1 / @NUM2, (@DIVISION)) 
INSERT INTO @SQL_CALCULATOR(CALCULATE, OPERATORS) VALUES  (@NUM1 % @NUM2, (@MODULE)) 
RETURN 
END 
